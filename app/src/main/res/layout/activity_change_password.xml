<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgback"
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_20dp"
            app:tint="@color/colorbottomtext" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/size_25dp"
            android:paddingBottom="@dimen/size_100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_changepassword"
                android:textSize="@dimen/text_size_35sp"
                android:textColor="@color/colortext"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_marginTop="@dimen/size_40dp">
            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_50dp"
                app:hintTextAppearance="@style/MyHintStyle">

                <EditText
                    android:id="@+id/edtoldPassWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/str_oldpassword"
                    android:inputType="textPassword"
                    android:theme="@style/MyEditText"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_50dp"
                app:hintTextAppearance="@style/MyHintStyle">

                <EditText
                    android:id="@+id/edtnewPassWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/str_newpassword"
                    android:inputType="textPassword"
                    android:theme="@style/MyEditText"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_50dp"
                app:hintTextAppearance="@style/MyHintStyle">

                <EditText
                    android:id="@+id/edtconfrmPassWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/prompt_confirm_password"
                    android:inputType="textPassword"
                    android:theme="@style/MyEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:text="@string/str_changepassword"
                android:textSize="@dimen/text_size_20sp"
                android:layout_marginTop="@dimen/size_80dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/proxima_nova_bold"
                android:background="@drawable/round_corner_button">
            </Button>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>