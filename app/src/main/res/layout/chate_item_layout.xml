<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/txtday"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Today"
    android:textColor="@color/colorPrimary"
    android:layout_gravity="center"
    android:background="@drawable/round_corner_dayview_bg"
    android:gravity="center"
    android:paddingLeft="@dimen/size_10dp"
    android:paddingRight="@dimen/size_10dp"
    android:paddingTop="@dimen/size_5dp"
    android:paddingBottom="@dimen/size_5dp"
    android:textSize="@dimen/text_size_14sp"
    android:layout_centerHorizontal="true"/>
<!--left view chat-->
    <RelativeLayout
        android:id="@+id/rllefview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left"
        android:gravity="left|center_vertical"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/profilecardview"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentLeft="true"
            app:cardCornerRadius="@dimen/size_20dp">
            <ImageView
                android:id="@+id/imgprofilephoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txtleftmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:layout_toRightOf="@+id/profilecardview"
            android:layout_marginLeft="@dimen/size_10dp"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/colortext"
            android:fontFamily="@font/proximanovacond_regular"
            android:gravity="left|center_vertical"
            android:padding="@dimen/size_10dp"
            android:background="@drawable/left_chat_background"
            android:text="Hello , How are you?"/>
        <TextView
            android:id="@+id/txttimeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:56 PM"
            android:textSize="@dimen/text_size_10sp"
            android:fontFamily="@font/proximanovacond_regular"
            android:textColor="@color/Colorchattime"
            android:layout_below="@+id/txtleftmessage"
            android:gravity="right|center_vertical"
            android:layout_toRightOf="@+id/txtleftmessage"/>
    </RelativeLayout>
    <!--right view chat -->
    <RelativeLayout
        android:id="@+id/rlrightview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right|center_vertical"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_20dp">
        <TextView
            android:id="@+id/txtrightmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginRight="@dimen/size_10dp"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/proximanovacond_regular"
            android:gravity="right|center_vertical"
            android:padding="@dimen/size_10dp"
            android:background="@drawable/right_chat_background"
            android:text="Hello ,Fine Thank You. :-)"/>
        <TextView
            android:id="@+id/txttimeright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:56 PM"
            android:textSize="@dimen/text_size_10sp"
            android:fontFamily="@font/proximanovacond_regular"
            android:textColor="@color/Colorchattime"
            android:layout_below="@+id/txtrightmessage"
            android:layout_marginTop="@dimen/size_5dp"
            android:gravity="left|center_vertical"/>
    </RelativeLayout>
</LinearLayout>
