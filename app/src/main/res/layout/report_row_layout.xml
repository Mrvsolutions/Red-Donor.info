<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/size_5dp">
    <RelativeLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llprofileview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/size_60dp"
                android:layout_height="@dimen/size_60dp"
                app:cardCornerRadius="@dimen/size_30dp">
                <ImageView
                    android:id="@+id/imgprofilephoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_20dp"
            app:cardCornerRadius="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_20dp"
                android:orientation="horizontal"
                android:background="@color/color_green"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="@dimen/size_15dp"
                    android:layout_height="@dimen/size_15dp"
                    android:layout_gravity="center_vertical"
                    android:progressTint="@color/colorWhite"
                    android:src="@drawable/ic_baseline_star_24">
                </ImageView>
                <TextView
                    android:id="@+id/txtratecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/size_5dp">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_toRightOf="@+id/llprofileview"
            android:layout_marginLeft="@dimen/size_10dp">
            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/colortext"
                android:text="Pinkal Kachhia"
                android:fontFamily="@font/proxima_nova_bold"
                android:paddingLeft="2dp"/>
            <TextView
                android:id="@+id/txtage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colordescriptiontext"
                android:paddingLeft="2dp"
                android:text="Age - 29"
                android:fontFamily="@font/proximanovacond_regular"/>
            <TextView
                android:id="@+id/txtaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/colordescriptiontext"
                android:text="25-Tirth Society , Anand"
                android:fontFamily="@font/proximanovacond_regular"
                android:paddingLeft="2dp"/>

            <TextView
                android:id="@+id/txtdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colordescriptiontext"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:text="Praesent augue felis, ullamcorper a est in, elementum mattis eros. Aliquam erat volutpat"
                android:fontFamily="@font/proximanovacond_regular"
                android:padding="3dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/viewborder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/color_linecolor"/>
</LinearLayout>