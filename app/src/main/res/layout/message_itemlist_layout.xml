<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_marginBottom="@dimen/size_10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/profilecardview"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_60dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_10dp"
        app:cardCornerRadius="@dimen/size_30dp">
        <ImageView
            android:id="@+id/imgprofilephoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_18sp"
        android:layout_toRightOf="@+id/profilecardview"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:textColor="@color/colortext"
        android:text="Pinkal Kachhia"
        android:fontFamily="@font/proxima_nova_bold"
        android:padding="3dp"/>
    <TextView
        android:id="@+id/txttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16sp"
        android:layout_marginTop="@dimen/size_15dp"
        android:textColor="@color/colortext"
        android:text="5:20 AM"
        android:fontFamily="@font/proximanovacond_regular"
        android:layout_alignParentRight="true"
        android:padding="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtname"
        android:layout_toRightOf="@+id/profilecardview"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_10dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgmedia"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:visibility="visible"
        android:src="@drawable/ic_photo"/>
    <TextView
        android:id="@+id/txtdesription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_18sp"
        android:layout_marginRight="@dimen/size_20dp"
        android:textColor="@color/colortext"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingLeft="3dp"
        android:text="Photo"
        android:fontFamily="@font/proximanovacond_regular"/>
    </LinearLayout>
</RelativeLayout>
