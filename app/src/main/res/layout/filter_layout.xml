<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Colorsearchbackground">
    <include
        android:id="@+id/toolbarview"
        layout="@layout/main_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Colorsearchbackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_Bloodgroup"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/Colorsearchtext"
                    android:fontFamily="@font/proximanovacond_regular"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:padding="@dimen/size_5dp"/>
                <RelativeLayout
                    android:id="@+id/rlBloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:background="@drawable/round_corner_grey_border">
                    <Spinner
                        android:id="@+id/spinnerbloodGroup"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_Minage"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/Colorsearchtext"
                    android:fontFamily="@font/proximanovacond_regular"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:padding="@dimen/size_5dp"/>
                <RelativeLayout
                    android:id="@+id/rlMinAge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:background="@drawable/round_corner_grey_border">
                    <Spinner
                        android:id="@+id/spinnerminage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_Maxage"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/Colorsearchtext"
                    android:fontFamily="@font/proximanovacond_regular"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:padding="@dimen/size_5dp"/>
                <RelativeLayout
                    android:id="@+id/rlMaxAge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:background="@drawable/round_corner_grey_border">
                    <Spinner
                        android:id="@+id/spinnermaxage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/Colorsearchtext"
                    android:fontFamily="@font/proximanovacond_regular"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:padding="@dimen/size_5dp"/>
                <RadioGroup
                    android:id="@+id/radioGender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_below="@+id/textView4">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:paddingLeft="@dimen/size_5dp"
                        android:fontFamily="@font/proximanovacond_regular"
                        android:textSize="@dimen/text_size_14sp"
                        android:id="@+id/male" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:paddingLeft="@dimen/size_5dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/proximanovacond_regular"
                        android:textSize="@dimen/text_size_14sp"
                        android:id="@+id/female"/>
                </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_DistancefromCurrentlocation"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/Colorsearchtext"
                android:fontFamily="@font/proximanovacond_regular"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:padding="@dimen/size_5dp"/>
            <RelativeLayout
                android:id="@+id/rldistancefromcurrentlocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:background="@drawable/round_corner_grey_border">
                <Spinner
                    android:id="@+id/spinnerdistance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
            <Button
                android:id="@+id/btn_Apply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:text="@string/str_ApplyFilter"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_20sp"
                android:layout_marginTop="@dimen/size_100dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/proxima_nova_bold"
                android:background="@drawable/round_corner_button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
