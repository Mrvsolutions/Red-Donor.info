<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--Floating label text style-->
    <style name="MyHintStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorinputtexthint</item>
        <item name="fontFamily">@font/proximanovacond_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorinputtexthint</item>
        <item name="colorControlActivated">@color/colorinputtexthint</item>
        <item name="android:textColor">@color/colortext</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="fontFamily">@font/proximanovacond_regular</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorbottomtext</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>
</resources>